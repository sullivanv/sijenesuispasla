}

.return-link-wrapper {
  display: none;
}

.product__policies {
  display: none;
}

.product-form {
  padding-top: 0 !important;
}

.template-product {
  .product-single__title {
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    font-size: 28px !important;
  }
