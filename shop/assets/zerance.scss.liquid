.product-card__title {
  display: block !important;
  text-align:center !important;
  font-size: 15px !important;
}

.price__badges--listing {
    margin-top: 0.3rem !important;
}


.price__badges--listing .price__badge {
  border: 0;
  color: red;
  @extend .monaco;
  font-size: 13px !important;
}


